#
# wm independent hotkeys
#

# terminal emulator started in bsp-like manner
super + Return
	herbstclient or ',' and '.' compare tags.focus.frame_count = 1 '.' compare tags.focus.curframe_wcount = 0 '.' spawn urxvtdc ',' and '_' compare tags.focus.curframe_wcount = 0 '_' spawn urxvtdc ',' chain '-' split auto '-' cycle_frame '-' spawn urxvtdc

# terminal emulator in same focused frame
super + shift + Return
	urxvtdc

# program launcher
super + e
	dmenu_run_i -p 'Launch:'

# pick *moji
super + shift + m
	splatmoji copy

# switch windows
super + w
	~/.config/herbstluftwm/scripts/wselect.sh

# Bring window
super + shift + w
	~/.config/herbstluftwm/scripts/bringwselect.sh

# toggle window titles
super + control + w
	~/.config/herbstluftwm/toggle_titles.sh

# Notes/todo
super + space
	dmenu-task

# Move window with mouse
super + button1
	herbstclient move

# zoom?
super + button2
	herbstclient zoom

# Resize with mouse
super + button3
	herbstclient resize

# Disable mouse middle click paste
~button2
    echo -n | xsel -n -i

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Sxhkd" "Config reloaded"

# Toggle bar
super + b
	togglebar.sh

# Dmenu usb controls
super + u
	unmount.sh

# Print screen
Print
	prtscr

# print region of screen
super + Print
	prtregion

# zoom
super + shift + z
	xcolor -c ""

# Toggle Touchpad
XF86Launch1
	toggle_touchpad.sh

# Brightness up
XF86MonBrightnessUp
	bright up

# Brightness down
XF86MonBrightnessDown
	bright down

# volume up
XF86AudioRaiseVolume
	vol pulse up

# volume down
XF86AudioLowerVolume
	vol pulse down

# toggle mute
XF86AudioMute
	vol pulse mute

# mic volume up
super + XF86AudioRaiseVolume
	vol pulsemic up

# mic volume down
super + XF86AudioLowerVolume
	vol pulsemic down

# mic toggle mute
XF86AudioMicMute
	vol pulsemic mute

# Bluetooth
XF86Bluetooth
	fzf-bluetooth

#Caffeine
XF86Display
	caffeine.sh

# play last/ restart audio
super + ctrl + alt + Left
	playerctl previous

# Play next audio
super + ctrl + alt + Right
	playerctl next

# toggle play/pause audio
super + ctrl + alt + Up
	playerctl play-pause

# stop audio
super + ctrl + alt + Down
	playerctl stop

# Rofi file search and directory opener
super + z
	file-finder

# display sxhkd bindings
super + a
	sxhkd_help

# edit sxhkd bindings
super + shift + a
	urxvtdc -e vim ~/.config/sxhkd/sxhkdrc

# record selected screen in mp4/gif
super + r; {m,g}
	{mp4,gif}

# record part of screen in mp4/gif
super + alt + r; {m,g}
	{mp4 -s,gif -s}

# toggle picom
super + shift + p
	togglepicom

# Greenclip
super + x		
	clipmenu -p 'Clipboard:' -l 0
	#greenclip.sh

# Whats playing?
super + j; {n,a}
	{spotplay,cover_popup.sh}

# toggle scratchpad terminal
super + d
	hlscrthpd.sh
 
# Color picker
super + shift + c
	colorpicker.sh

# Query last notification
control + grave
	notif_hist.sh -q

# Close current notification
control + space
	notif_hist.sh -c

# Toggle notifications
super + shift + n
	toggledunst

# Toggle redshift
XF86Tools
	toggle_redshift.sh

#
#  hlwm hotkeys
#

# Powermenu
super + shift + e
	power

# restart
super + shift + r
	herbstclient reload

# close
super + q
	herbstclient remove

# close
super + shift + q
	herbstclient close_and_remove

# alternate between the tiled and monocle layout
super + m
	~/.config/herbstluftwm/scripts/maximize.sh

# Jump to urgent
super + i
	herbstclient jumpto urgent

# circulate window focus in frame
super + c
	herbstclient cycle

# Toggle various window states
super + p; {p,f,a}
	herbstclient {pseudotile,attr clients.focus.floating,fullscreen} toggle

# rotate windows by certain amounts
super + r;{f,b}
	herbstclient cycle_all {+1,-1}

#
# Hide/ unhide windows
#

# hide window
super + h; h
	herbstclient set_attr clients.focus.minimized toggle

# list and unhide selected window
super + h; u
	~/.config/herbstluftwm/scripts/hidden_list.sh

# Unminimize selected window and bring to current tag
super + h; b
	~/.config/herbstluftwm/scripts/bring_hidden.sh

# save the current session
super + shift + s
	~/.config/herbstluftwm/scripts/savestate.sh

#
# focus/swap
#

# focus the node in the given direction
super + {Left,Down,Up,Right}
	herbstclient focus {left,down,up,right}

# Smart move script; should rotate windows?
super + shift + {Left,Down,Up,Right}
	herbstclient shift {left,down,up,right}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	herbstclient use_index {-1,+1} --skip-visible

# cycle through layouts in frame
super + Tab
		herbstclient or , and . compare tags.focus.curframe_wcount = 2 . cycle_layout +1 vertical horizontal max vertical grid , cycle_layout +1

# Switch between max and vertical; useful for "tabbing"
super + s
	herbstclient cycle_layout +1 max vertical

# Focus or bounce between desktops
super + {1-9,0}
	target='{0,1-9}'; \
	herbstclient substitute PRE tags.focus.index chain + use_index "$target" + or , compare tags.focus.index != PRE , use_previous

# Send to the given desktop (multimonitor)
super + shift + {1-9,0}
  herbstclient move_index {0,1-9}

# Cycle monitors
super + grave
	herbstclient cycle_monitor

#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	herbstclient split {left,bottom,top,right} 0.5

# cancel the preselection for the focused node
super + ctrl + space
	herbstclient split explode

#
# move/resize
#

#resize
super + alt + {Left,Down,Up,Right}
	herbstclient resize {left,down,up,right} +0.02

# Toggle frame visibility
super + f
	herbstclient set always_show_frame toggle

# Adjust window gaps
super + {minus,equal}
	WG=$(herbstclient get window_gap); \
	let "WG=WG{-,+}4"; \
	herbstclient set window_gap $WG

# Adjust frame gaps
super + shift + {minus,equal}
	WG=$(herbstclient get frame_gap); \
	let "WG=WG{-,+}4"; \
	herbstclient set frame_gap $WG

# Reset gaps
super + BackSpace
	herbstclient set window_gap -3 && herbstclient set frame_gap 12
