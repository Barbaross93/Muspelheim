set -g status-right ""
setw -g window-status-format "#[fg=#fbf1c7,bg=#928374,nobold,nounderscore,noitalics] #I #[fg=#5c6a72,bg=#d5c4a1] #W #[bg=#fbf1c7] "
setw -g window-status-current-format "#[fg=#fbf1c7,bg=#458588,nobold,nounderscore,noitalics] #I #[fg=#5c6a72,bg=#d5c4a1,BOLD] #W #[bg=#fbf1c7,nobold,nounderscore,noitalics] "
