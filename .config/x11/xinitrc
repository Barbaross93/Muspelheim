#!/bin/bash

# Do nothing if interrupted
trap '' INT TSTP

userresources=$HOME/.config/x11/Xresources
usermodmap=$HOME/.config/x11/Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps

if [ -f $sysresources ]; then
    xrdb -merge $sysresources

fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"

fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

# start some nice programs

if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/?*.sh; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# Just to make sure my profile settings are loaded
[ -f /etc/profile ] && . /etc/profile
[ -f ~/.config/bash/bash_profile ] && . ~/.config/bash/bash_profile
[ -f ~/.config/x11/xprofile ] && . ~/.config/x11/xprofile

gpg-connect-agent /bye
xinput set-prop "Elan Touchpad" "Device Enabled" 0
lock &
dbus-launch --exit-with-x11 bspwm
