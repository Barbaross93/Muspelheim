#!/bin/sh

cmd="$(fd --hidden -E 'Public/neat-things/*' | ddmenu -p 'Open:' | tee /tmp/fzf-dir)"
wait < <(jobs -p)
dir=$(cat /tmp/fzf-dir)
if [ -n "$dir" ]; then
	xdg-open "$dir"
	rm /tmp/fzf-dir
else
	exit
fi

