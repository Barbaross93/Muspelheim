#!/bin/sh

options=" Lock
↵ Logout
 Suspend
⏼ Hibernate
 Reboot
⏻ Shutdown"

choice=$(echo "$options" | dmenu -p "Power:")

case "$choice" in
*Lock*)
	#xidlehook-client --socket /tmp/xidlehook.sock control --action Trigger --timer 2
	#xset s activate
	xautolock -locknow
	;;
*Logout*)
	herbstclient quit
	#logout
	;;
*Suspend*)
	sudo zzz -H
	;;
*Hibernate*)
	sudo ZZZ
	;;
*Reboot*)
	sudo reboot
	;;
*Shutdown*)
	sudo poweroff
	;;
esac
