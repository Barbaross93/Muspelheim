#!/bin/sh

options="⭤ Lock
↵ Logout
⏼ Hibernate
 Reboot
⏻ Shutdown"

choice=$(echo "$options" | dmenu -p "Power:")

case "$choice" in
*Lock*)
	#xidlehook-client --socket /tmp/xidlehook.sock control --action Trigger --timer 2
	xset s activate
	;;
*Logout*)
	herbstclient quit
	#logout
	;;
*Hibernate*)
	sudo ZZZ
	;;
*Reboot*)
	sudo reboot
	;;
*Shutdown*)
	sudo poweroff
	;;
esac
